{
  "printWidth": 100,
  "singleQuote": true,
  "trailingComma": "all",
  "bracketSpacing": true,
  "useTabs": false,
  "tabWidth": 2,
  "semi": true,
  "arrowParens": "always",
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"],
      "options": {
        "jsxBracketSameLine": false,
        "jsxSingleQuote": false
      }
    },
    {
      "files": ["*.css", "*.scss"],
      "options": {
        "tabWidth": 4
      }
    }
  ]
}
